<h2>Create a product</h2>

<%= form_with model: [:admin, @product] do |form| %>

<div>
  <%= form.label :Name %><br>
  <%= form.text_field :name, placeholder: "Enter a product name" %>
  <% @product.errors.full_messages_for(:name).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.label :Description %><br>
  <%= form.text_area :description, placeholder: "Enter a product description" %>
  <% @product.errors.full_messages_for(:description).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.label :Price %><br>
  <%= form.number_field :price %>
  <% @product.errors.full_messages_for(:price).each do |message| %>
    <%= message %>
  <% end %> 
</div>

<div>
  <%= form.submit %>
</div>

<% end %>