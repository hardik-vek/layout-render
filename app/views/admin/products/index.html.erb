<h1 class="center">Products Listing</h1>

<center>
<table> 
  <th>Name</th>
  <th colspan=3>Actions</th>
  <th>Orders</th>
  <% @products.each do |product| %>
  <tr>  
    <td><%= product.name %></td>
    <td><%= button_to "Show", admin_product_path(product), method: :get %></td>
    <td><%= button_to "Edit", edit_admin_product_path(product), method: :get %></td>
    <td><%= button_to "Delete", admin_product_path(product), method: :delete %></td>
    <td><%= button_to "Orders", admin_product_orders_path(product), method: :get %></td>
  </tr>
  <% end %>
</table>
<p>------------------------------------------------</p>
</center>
<center>
<div>
  <%= link_to "Add a product", new_admin_product_path %></br>
</div>
<p>------------------------------------------------</p>
</center>
