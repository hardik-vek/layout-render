
<%= stylesheet_link_tag "application" %>
<center>
<h1>Welcome to merchant page</h1>

<h2>Products</h2>

  <table>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
    </tr>
    <% end %>
  </table>
</center>

<center>
<h2>Orders</h2>
  <table>
    <th>Name</th>
    <th>Quantity</th>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.product.name %></td>
      <td><%= order.quantity %></td>
    </tr>
    <% end %>
</table>
</center>

<center>
  <%= button_to "sign Out", destroy_user_session_path, method: :delete %></br>
</center>
