<center>

<table> 
  <% if @product.orders.any? %>
  <th>Name</th>
  <th>Description</th>
  <th>Price</th>
  <th>Quantity</th>
  <th colspan=3>Actions</th>
  <% @product.orders.each do |order| %>
  <tr>  
    <td><%= @product.name %></td>
    <td><%= @product.description %></td>
    <td><%= @product.price %></td>
    <td><%= order.quantity %></td>
    <td><%= button_to "Edit", edit_product_path(@product), method: :get %></td>
    <td><%= button_to "Delete", product_path(@product), method: :delete %></td>
    <td><%= button_to "Back", products_path, method: :get %></td>
  </tr>
    <% end %>
    <% else %>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan=3>Actions</th>
    <tr>
    <td><%= @product.name %></td>
    <td><%= @product.description %></td>
    <td><%= @product.price %></td>
    <td><%= button_to "Edit", edit_product_path(@product), method: :get %></td>
    <td><%= button_to "Delete", product_path(@product), method: :delete %></td>
    <td><%= button_to "Back", products_path, method: :get %></td>
    </tr>
    <% end %>
</table>

</center>
